<%= form_tag login_path do %>
  <div class="form-group">
    <%= label_tag :username %>
    <%= text_field_tag :username, "", class:"form-control", "aria-describedby": "username field", placeholder: "Enter Username" %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", class: "form-control", "aria-describedby": "password field", placeholder: "Password" %>
  </div>
  <%= submit_tag "Log In", class: "btn btn-primary" %>
<% end %>
