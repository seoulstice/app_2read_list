<% if !logged_in? %>
  <%= link_to "Register", new_user_path %>

  <%= link_to "Log In", login_path %>
<% end %>

<% if logged_in? %>
  <%= link_to "Log Out", logout_path %>
  <p>
  Signed in as <%= current_user.username %>
  </p>
<% end %>

<%= form_tag popular_path, method: :get do %>
  <%= select_tag :days, options_for_select(day_choices) %>
  <%= submit_tag "Submit" %>
<% end %>
