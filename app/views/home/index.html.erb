<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">Home</li>
  </ol>
</nav>
<div id="popular_select">
  <%= form_tag popular_path, method: :get do %>
  <%= select_tag :days, options_for_select(day_choices) %>
  <%= submit_tag "Submit" %>
  <% end %>
</div>
<div id="top_select">
  <%= form_tag top_path, method: :get do %>
  <%= select_tag :section, options_for_select(section_choices) %>
  <%= submit_tag "Submit" %>
  <% end %>
</div>
<% if logged_in? %>
<table id="unread">
  <% @unread_saved_articles.each do |unread_saved_article| %>
  <tr>
    <td><%= image_tag unread_saved_article.photo %></td>
    <td><%= link_to unread_saved_article.title, unread_saved_article.url, target: "_blank" %><br>
    <%= unread_saved_article.abstract %></td>
    <td><%= unread_saved_article.authors %></td>
    <td><%= unread_saved_article.section %></td>
    <td><%= unread_saved_article.published_date %></td>
    <td>
      <%= form_for [current_user, unread_saved_article], url: user_saved_article_path(current_user, unread_saved_article), html: {method: :patch} do |f|   %>
        <%= f.hidden_field :read, value: true %>
        <%= f.submit "Mark as Read" %>
      <% end %>
    </td>
    <td><%= button_to "Delete", user_saved_article_path(current_user, unread_saved_article), method: :delete %></td>
  </tr>
  <% end %>
</table>
-------------
<table id="read">
  <% @read_saved_articles.each do |read_saved_article| %>
  <tr>
    <td><%= image_tag read_saved_article.photo %></td>
    <td><%= link_to read_saved_article.title, read_saved_article.url, target: "_blank" %><br>
    <%= read_saved_article.abstract %></td>
    <td><%= read_saved_article.authors %></td>
    <td><%= read_saved_article.section %></td>
    <td><%= read_saved_article.published_date %></td>
    <td>
      <%= form_for [current_user, read_saved_article], url: user_saved_article_path(current_user, read_saved_article), html: {method: :patch} do |f|   %>
        <%= f.hidden_field :read, value: false %>
        <%= f.submit "Mark as Unread" %>
      <% end %>
    </td>
    <td><%= button_to "Delete", user_saved_article_path(current_user, read_saved_article), method: :delete %></td>
  </tr>
  <% end %>
</table>
<% end %>
